<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/id_direcao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/id_balao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_rigth_layout"
        android:paddingBottom="@dimen/paddingBalaoEsqBottom"
        android:paddingLeft="@dimen/paddingBalaoEsqLeft"
        android:paddingEnd="@dimen/paddingBalaoEsqRight"
        android:paddingRight="@dimen/paddingBalaoEsqRight"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/id_imagem_chat"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:src="@drawable/user" />

                <TextView
                    android:id="@+id/id_nome_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/data_hora_message"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_marginTop="8dp"
                    android:text="12:00" />

            </LinearLayout>

            <TextView
                android:id="@+id/id_mensagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                android:text="testee fx\zxzx\x\zxz\asafsfsfsaf"
                android:paddingRight="24dp"
                android:textSize="@dimen/text_size_chat" />


        </LinearLayout>

    </LinearLayout>


    </LinearLayout>



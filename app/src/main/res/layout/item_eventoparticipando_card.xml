<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="8dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_evento"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/capa_android" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/titulo"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_evento"
                android:paddingLeft="8dp"
                android:textStyle="bold"
                android:text="asdasdasdasdas"
                android:textSize="22sp" />

            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/descricao"
                android:layout_marginLeft="4dp"
                android:layout_width="260dp"
                android:layout_height="18dp"
                android:layout_below="@+id/titulo"
                android:paddingLeft="8dp"
                android:text="asdasdasdsdasdsads" />


            <LinearLayout
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="7dp"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_action_users"/>
                <TextView
                    android:layout_marginTop="6dp"
                    android:id="@+id/id_qtd_participantes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="12 "/>
                <TextView
                    android:layout_marginTop="6dp"
                    android:id="@+id/id_max_participantes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="/12"/>

                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_date_range_grem24dp"/>
                <TextView
                    android:layout_marginTop="6dp"
                    android:id="@+id/id_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/03"/>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>


</android.support.v7.widget.CardView>

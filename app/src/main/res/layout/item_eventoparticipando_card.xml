<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="4dp"
                    android:id="@+id/img_criador"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:src="@drawable/criador"
                    android:visibility="invisible"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_perfil_usuario_criador"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:src="@null" />
            </LinearLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="12dp"
                android:id="@+id/img_evento"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:src="@null" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/titulo"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_evento"
                android:paddingLeft="8dp"
                android:textStyle="bold"
                android:text=""
                android:textSize="18sp" />

            <TextView
                android:id="@+id/descricao"
                android:layout_width="260dp"
                android:layout_height="18dp"
                android:paddingLeft="8dp"
                android:layout_below="@+id/titulo"
                android:text="" />


            <LinearLayout
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_action_users"/>
                <TextView
                    android:layout_marginTop="3dp"
                    android:id="@+id/id_qtd_participantes"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text=""/>
                <TextView
                    android:layout_marginTop="3dp"
                    android:id="@+id/id_max_participantes"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text=""/>

                <ImageView
                    android:layout_marginLeft="8dp"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_date_range_grem24dp"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/id_data"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="12/11/1111"/>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>


</android.support.v7.widget.CardView>
